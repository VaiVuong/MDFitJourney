<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MDFitJourney.Pages.InformationPage"
             BackgroundColor="#2D2D2D"
             Title="Information">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Top Menu -->
        <Grid Padding="10" BackgroundColor="#2D2D2D">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Source="avatar.png" WidthRequest="32" HeightRequest="32"/>
            <Label Grid.Column="1"
                   Text="FitJourney"
                   FontSize="20"
                   TextColor="#bbdf32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            <Image Grid.Column="2" Source="bell.png" WidthRequest="24"/>
        </Grid>

        <!-- Main Content -->
        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="15">

                <Label Text="About Us"
                       FontSize="18"
                       TextColor="#bbdf32"
                       FontAttributes="Bold" 
                       HorizontalTextAlignment="Center"/>

                <Label Text="Terms of Service"
                       FontSize="18"
                       TextColor="#bbdf32"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"/>

                <Label Text="Feedback"
                       FontSize="18"
                       TextColor="#bbdf32"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"/>

                <!-- Feedback Box -->
                <Frame BackgroundColor="#1E1E1E"
                       BorderColor="#bbdf32"
                       CornerRadius="10"
                       Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Editor x:Name="FeedbackEditor"
                                Placeholder="Type your feedback here..."
                                PlaceholderColor="#888"
                                TextColor="White"
                                AutoSize="TextChanges"
                                BackgroundColor="#2D2D2D"
                                HeightRequest="100" />

                        <Button Text="Submit Feedback"
                                BackgroundColor="#bbdf32"
                                TextColor="Black"
                                FontAttributes="Bold"
                                CornerRadius="5"
                                Clicked="OnSubmitFeedbackClicked"/>
                    </VerticalStackLayout>
                </Frame>

                <Label Text="FAQ"
                       FontSize="18"
                       TextColor="#bbdf32"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"/>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Menu -->
        <Grid Grid.Row="2" BackgroundColor="Black" HeightRequest="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ImageButton Source="hamburger.png"
                         Clicked="GoToHome_Clicked"
                         Grid.Column="0"/>
            <ImageButton Source="bookmark.png"
                         Grid.Column="1"/>
            <ImageButton Source="addweight.png"
                         Clicked="AddWeight_Clicked"
                         Grid.Column="2"/>
            <ImageButton Source="chart.png"
                         Clicked="GoToWeightTracker_Clicked"
                         Grid.Column="3"/>
            <ImageButton Source="info.png"
                         Clicked="GoToInfo_Clicked"
                         Grid.Column="4"/>
        </Grid>
    </Grid>
</ContentPage>
