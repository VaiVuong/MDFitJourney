<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MDFitJourney.Pages.InformationPage"
             BackgroundColor="#2D2D2D"
             Title="Information">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Top Menu -->
        <Grid Padding="10" BackgroundColor="#2D2D2D">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Source="avatar.png" WidthRequest="32" HeightRequest="32"/>
            <Label Grid.Column="1"
                   Text="FitJourney"
                   FontSize="20"
                   TextColor="#bbdf32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            <Image Grid.Column="2" Source="bell.png" WidthRequest="24"/>
        </Grid>

        <!-- Main Content -->
        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="15">

                <Label Text="About Us"
                       FontSize="18"
                       TextColor="#bbdf32"
                       FontAttributes="Bold" 
                       HorizontalTextAlignment="Center"/>

                <Label Text="Our vision at FitJourney is all about creating a healthy you. Initially created in 2024, four students had a dream about creating an easily accessible health management app. We wanted to create an environment where managing your weight loss journey was stress-free and simple."
                       FontSize="14"
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>

                <Label Text="Terms of Service"
                       FontSize="18"
                       TextColor="#bbdf32"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"/>

                <Label Text="1. Agreement to Terms"
                       FontSize="14"
                       TextColor="White"
                       FontAttributes="Bold" 
                       HorizontalTextAlignment="Center"/>

                <Label Text="By creating an account and using this app, you accept an agreement to follow our following terms. If you do not agree, you will not be allowed to use the application."
                       FontSize="12"
                       TextColor="White" 
                       HorizontalTextAlignment="Center"/>

                <Label Text="2. Privacy Policy"
                       FontSize="14"
                       TextColor="White"
                       FontAttributes="Bold" 
                       HorizontalTextAlignment="Center"/>

                <Label Text="Our users' data security and privacy is very important to us. We promise to never use your data for outside means and personal collection. In accordance to regulations, we only use user data to build better health journeys for other users and you. By using this app, you agree to let FitJourney use your data to only help calculate better health profiles/recommendations for it's users."
                       FontSize="12"
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>

                <Label Text="3. Limitations of Liability"
                       FontSize="14"
                       TextColor="White"
                       FontAttributes="Bold" 
                       HorizontalTextAlignment="Center"/>

                <Label Text="FitJourney is not responsible for any physical injury that occurs to a user. The supplied routines are recommendations and should always be followed through with the proper form and etiquette by the users. We never encourage users to over work and potentially put themselves in danger."
                       FontSize="12"
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>

                <Label Text="Feedback"
                       FontSize="18"
                       TextColor="#bbdf32"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"/>

                <!-- Feedback Box -->
                <Frame BackgroundColor="#1E1E1E"
                       BorderColor="#bbdf32"
                       CornerRadius="10"
                       Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Editor x:Name="FeedbackEditor"
                                Placeholder="Type your feedback here..."
                                PlaceholderColor="#888"
                                TextColor="White"
                                AutoSize="TextChanges"
                                BackgroundColor="#2D2D2D"
                                HeightRequest="100" />

                        <Button Text="Submit Feedback"
                                BackgroundColor="#bbdf32"
                                TextColor="Black"
                                FontAttributes="Bold"
                                CornerRadius="5"
                                Clicked="OnSubmitFeedbackClicked"/>
                    </VerticalStackLayout>
                </Frame>

                <Label Text="FAQ"
                       FontSize="18"
                       TextColor="#bbdf32"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"/>

                <Label Text="1. Does FitJourney have any in-app purchases/subscriptions?"
                       FontSize="14"
                       TextColor="White"
                       FontAttributes="Bold" 
                       HorizontalTextAlignment="Center"/>

                <Label Text="FitJourney is completely free to use! We believe in delivering the best quality fitness tracking system with no cost!"
                       FontSize="12"
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>

                <Label Text="2. What should I do if I have a recommendation for the FitJourney app?"
                       FontSize="14"
                       TextColor="White"
                       FontAttributes="Bold" 
                       HorizontalTextAlignment="Center"/>

                <Label Text="If you have a recommendation or feature request, please use the feedback box in the Information Page! We want to continue to grow and we cannot do that without the support/feedback of our users!"
                       FontSize="12"
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>

                <Label Text="3. What should I do if a recommended FitJourney routine doesn't work for me?"
                       FontSize="14"
                       TextColor="White"
                       FontAttributes="Bold" 
                       HorizontalTextAlignment="Center"/>

                <Label Text="We are confident that this is very unlikely but there is always a small possibility. Everyone's bodies are different so we need to figure out what works for you specifically! By reaching out in the feedback box, we will contact you and personally try to solve this problem with you!"
                       FontSize="12"
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Menu -->
        <Grid Grid.Row="2" BackgroundColor="Black" HeightRequest="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ImageButton Source="hamburger.png"
                         Clicked="GoToHome_Clicked"
                         Grid.Column="0"/>
            <ImageButton Source="bookmark.png"
                         Grid.Column="1"/>
            <ImageButton Source="addweight.png"
                         Clicked="AddWeight_Clicked"
                         Grid.Column="2"/>
            <ImageButton Source="chart.png"
                         Clicked="GoToWeightTracker_Clicked"
                         Grid.Column="3"/>
            <ImageButton Source="info.png"
                         Clicked="GoToInfo_Clicked"
                         Grid.Column="4"/>
        </Grid>
    </Grid>
</ContentPage>
